{
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.reflect",
      "es2015.symbol",
      "es5"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": false,
    "rootDir": ".",
    "sourceMap": true,
    "stripInternal": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../node_modules/@types/*"
      ]
    }
  },
  "exclude": [
    "build",
    "dist",
    "test"
  ]
}
